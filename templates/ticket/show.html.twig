{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            
            <tr>
                <th>Titre</th>
                <td>{{ ticket.getTitre() }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ ticket.getNomclient() }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ticket.getDescription() }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ ticket.getStatut() }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ ticket.getDate() ? ticket.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('ticket_index') }}"> <button class="btn btn-primary">retour</button></a>

    <a href="{{ path('ticket_edit', {'id': ticket.id}) }}"> <button class="btn btn-primary">Modifier</button></a>

    {{ include('ticket/_delete_form.html.twig') }}
{% endblock %}
